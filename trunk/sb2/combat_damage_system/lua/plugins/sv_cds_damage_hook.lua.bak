/*******************************************************************************************************
	This is the Damage Hook handling code. 
	This makes it so that default damage get's converted to CDS damage.
	If you don't want to use this just set the "active" to false to disactivate the loading of it
*******************************************************************************************************/

local active = true

/*******************************************************************************************************
	DON'T EDIT FROM HERE
*******************************************************************************************************/

if not active then return end

function CDS_NormalDamage(ent, inflictor, attacker, amount, dmginfo)
	if ent:IsValid()  and not(ent:IsPlayer() and inflictor == ent) and server_settings.Bool( "CDS_Enabled" ) then
		if(ent:GetClass() == "prop_ragdoll") then return end
		if not (dmginfo:GetAttacker() == GetWorldEntity()) then
			/*if attacker:IsPlayer() then
				attacker = attacker:UserID()
			else
				attacker = attacker:EntIndex()
			end*/
			if(ent:IsPlayer() or ent:IsNPC()) then
				if(ent.underattack) then
					ent.underattack = false
					return 
				else
					ent.underattack = true
				end	
			end
			if ent:IsPlayer() or ent:IsNPC() or (ent:Health() == 0 and ent:GetMaxHealth() == 1) then //check to allow normal damage to be done to things like explosive barrels
				dmginfo:ScaleDamage( 0 ) //overrides the default damage system!
			end
			if dmginfo:IsBulletDamage() then
				local force = math.Round(dmginfo:GetDamageForce():Length()/668)
				force = math.Clamp(force, 0, 15)
				if ent:IsPlayer() or ent:IsNPC() then
					amount = dmginfo:GetDamage()
				end
				cds_damageent(ent, amount, force, attacker)
			elseif dmginfo:IsExplosionDamage() then
				cds_damageent(ent, amount, 15, attacker) //default armor = 25
			elseif dmginfo:IsFallDamage() then
				if ent:IsPlayer() then
					local dam = amount
					cds_damageent(ent, dam, nil, attacker)
				else
					cds_damageent(ent, amount , 5, attacker)
				end
			else
				cds_damageent(ent, amount, nil , attacker)
			end
			if ent:IsPlayer() or ent:IsNPC() or (ent:Health() == 0 and ent:GetMaxHealth() == 1) then
				return false
			end
		end
	end
end
hook.Add( "EntityTakeDamage", "CDS_normal_damage", CDS_NormalDamage )